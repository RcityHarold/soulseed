# SurrealDB 连接地址（支持 ws:// 或 http://）
ACE_SURREAL_URL=ws://127.0.0.1:8000

# 命名空间与数据库名称
ACE_SURREAL_NAMESPACE=soul
ACE_SURREAL_DATABASE=ace

# 连接池最大连接数
ACE_SURREAL_POOL_MAX=8

# 服务监听地址与租户
ACE_SERVICE_ADDR=0.0.0.0:8080
ACE_TENANT_ID=1

# OpenAI 配置（用于真实 Thin-Waist 调用）
# OPENAI_API_KEY=sk-******
# OPENAI_MODEL=gpt-4o-mini

# Soulbase Gateway（工具/协作真实回执）
# SOULBASE_GATEWAY_BASE_URL=https://gateway.example.com/api/v1
# SOULBASE_GATEWAY_TOKEN=sb-******
# SOULBASE_GATEWAY_TIMEOUT_MS=15000

# 可选：禁用 Surreal 持久化（本地测试使用）
# ACE_PERSISTENCE_DISABLED=true

# 可选：若 SurrealDB 开启鉴权，请填写账号与密码
# ACE_SURREAL_USERNAME=root
# ACE_SURREAL_PASSWORD=root

# 可选：Redis Outbox 转发配置
# ACE_REDIS_URL=redis://127.0.0.1:6379/
# ACE_REDIS_LIST_KEY=sb:tx:outbox
# ACE_REDIS_CHANNEL=sb.tx.outbox
